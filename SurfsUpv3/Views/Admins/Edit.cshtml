@model SurfsUpv3.Models.Booking

@{
    ViewData["Title"] = "Edit";
}

<div class="header"><h1>Ret booking</h1></div>


<hr />
<div class="admin-row">
    <div class="admin-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookingId" />
            <div class="form-group">
                <label asp-for="CustomerName" class="control-label">@TranslationHelper.Labels["CustomerName"]</label>
                <input asp-for="CustomerName" class="form-control" />
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerEmail" class="control-label">@TranslationHelper.Labels["CustomerEmail"]</label>
                <input asp-for="CustomerEmail" class="form-control" />
                <span asp-validation-for="CustomerEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerPhone" class="control-label">@TranslationHelper.Labels["CustomerPhone"]</label>
                <input asp-for="CustomerPhone" class="form-control" />
                <span asp-validation-for="CustomerPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedSurfboard" class="control-label">@TranslationHelper.Labels["SelectedSurfboard"]</label>
                <input asp-for="SelectedSurfboard" class="form-control" />
                <span asp-validation-for="SelectedSurfboard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentPeriod" class="control-label">@TranslationHelper.Labels["RentPeriod"]</label>
                <input asp-for="RentPeriod" class="form-control" />
                <span asp-validation-for="RentPeriod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentHours" class="control-label">@TranslationHelper.Labels["RentHours"]</label>
                <input asp-for="RentHours" class="form-control" />
                <span asp-validation-for="RentHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RentReturn" class="control-label">@TranslationHelper.Labels["RentReturn"]</label>
                <input asp-for="RentReturn" class="form-control" />
                <span asp-validation-for="RentReturn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Remarks" class="control-label">@TranslationHelper.Labels["Remarks"]</label>
                <input asp-for="Remarks" class="form-control" />
                <span asp-validation-for="Remarks" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SurfboardAmount" class="control-label">@TranslationHelper.Labels["SurfboardAmount"]</label>
                <input asp-for="SurfboardAmount" class="form-control" />
                <span asp-validation-for="SurfboardAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">@TranslationHelper.Labels["Price"]</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label">@TranslationHelper.Labels["Gender"]</label>
                <input asp-for="Gender" class="form-control" />
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label">@TranslationHelper.Labels["Size"]</label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Gem ændringer" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="back">
    <a asp-action="Index">Tilbage</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
