        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SurfboardAmount)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["Price"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
