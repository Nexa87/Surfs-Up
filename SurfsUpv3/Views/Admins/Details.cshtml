            @TranslationHelper.Labels["Size"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Size)
        </dd>

    </dl>
</div>
<div class="back">
    <a asp-action="Edit" asp-route-id="@Model?.BookingId">Ændre bookingdetaljer</a> |
    <a asp-action="Index">Tilbage til bookingoversigt</a>
</div>
