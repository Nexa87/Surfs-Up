@model SurfsUpv3.Models.Booking

@{
    ViewData["Title"] = "Details";
}

<div class="header"><h1>Bookingdetaljer</h1></div>

<div class="admin-row" style="justify-content:center; display:flex; align-items:center;margin-left:500px;">
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["CustomerName"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["CustomerEmail"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerEmail)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["CustomerPhone"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerPhone)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["SelectedSurfboard"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SelectedSurfboard)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["RentPeriod"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentPeriod)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["RentHours"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentHours)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["RentReturn"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.RentReturn)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["Remarks"]
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Remarks)
        </dd>
        <dt class = "col-sm-2">
            @TranslationHelper.Labels["SurfboardAmount"]
