<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SurfsUpv3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SurfsUpv3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SurfsUpv3</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav-list">
                <li class="nav-item logo">
                    <img src="~/lib/bootstrap/img/JohnDude.jpg" />
                    <span class="nav-list_img-text">Surf's up</span>
                </li>
                <li class="nav-item">
                    <a asp-controller="home" asp-action="index">Home</a> <!-- Just so we have an asp-controller variation example -->
                </li>
                <li class="nav-item">
                    <a href="Udlejning">Udlejning</a> <!-- Just so we have an href variation example -->
                </li>
                <li class="nav-item">
                    <a href="#">Kontakt</a>
                </li>
                <li class="nav-item">
                    <a href="about.html">Om os</a>
                </li>
                <li class="nav-item">
                    <a href="RentOrder">Kurv</a>
                </li>
                <li class="nav-item">
                    <input type="text" placeholder="Søg">
                </li>
            </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - SurfsUpv3 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
